{
  "presets": ["@babel/preset-env", "@babel/preset-react", "@babel/preset-typescript"],
  "plugins": [
    ["@babel/plugin-proposal-class-properties", {"loose": true}],
    [
      "babel-plugin-module-resolver",
      {
        "extensions": [".js", ".jsx", ".ts", ".tsx"],
        "root": ["./src"],
        "alias": {
          "@": "./src"
        }
      }
    ],
    ["@babel/transform-runtime"]
  ]
}
